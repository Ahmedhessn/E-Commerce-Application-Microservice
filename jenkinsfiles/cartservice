pipeline {
    agent any 

    environment {
        // الثوابت الخاصة بالحساب والمستودع
        GIT_REPO_NAME = "E-Commerce-Application-Microservice"
        GIT_USER_NAME = "Ahmedhessn"
        GIT_EMAIL     = "ahmed.hessn1212@gmail.com"
        AWS_ID        = "503459125797"
        
        // المتغيرات الخاصة بالخدمة (تأكد من مطابقتها للهيكل في GitHub)
        IMAGE_NAME    = "checkoutservice" 
        REPO_URL      = "${AWS_ID}.dkr.ecr.us-east-1.amazonaws.com/${IMAGE_NAME}"
        YAML_FILE     = "checkoutservice.yaml"
        
        // المسار اللي فيه الـ Dockerfile فعلياً
        DOCKER_CONTEXT = "src/checkoutservice" 
    }

    stages {
        stage('Cleaning Workspace') {
            steps { cleanWs() }
        }

        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: "https://github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git"
            }
        }

        stage("Docker Image Build") {
            steps {
                script {
                    // هنا كان الخطأ، دخلنا فولدر src زيادة
                    dir("${DOCKER_CONTEXT}") {
                        sh "docker build -t ${IMAGE_NAME} ."
                    }
                }
            }
        }

        stage("ECR Image Pushing") {
            steps {
                script {
                    sh """
                    aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin ${AWS_ID}.dkr.ecr.us-east-1.amazonaws.com
                    docker tag ${IMAGE_NAME}:latest ${REPO_URL}:${BUILD_NUMBER}
                    docker push ${REPO_URL}:${BUILD_NUMBER}
                    """
                }
            }
        }

        stage('Update Deployment file') {
            steps {
                // تأكد إن اسم الفولدر ده kubernetes-files وليس k8s-files في المستودع
                dir('kubernetes-files') {
                    withCredentials([usernamePassword(credentialsId: 'my-git-pattoken', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_PASS')]) {
                        sh """
                            git config user.email "${GIT_EMAIL}"
                            git config user.name "${GIT_USER_NAME}"

                            # تحديث الصورة في ملف الـ YAML
                            sed -i "s#image:.*#image: ${REPO_URL}:${BUILD_NUMBER}#g" ${YAML_FILE}

                            git add ${YAML_FILE}
                            git commit -m "Update ${IMAGE_NAME} Image to version ${BUILD_NUMBER}" || echo "No changes to commit"

                            git remote set-url origin https://${GIT_USER}:${GIT_PASS}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git
                            git push origin main
                        """
                    }
                }
            }
        }
    }
}