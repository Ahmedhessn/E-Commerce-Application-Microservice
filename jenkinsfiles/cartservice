pipeline {
    agent any 

    environment {
        // غير دول بس في كل ملف جديد
        GIT_REPO_NAME = "E-Commerce-Application-Microservice"
        GIT_EMAIL     = "ahmed.hessn1212@gmail.com"
        GIT_USER_NAME  = "Ahmedhessn"
        IMAGE_NAME    = "cartservice" 
        REPO_URL      = "503459125797.dkr.ecr.us-east-1.amazonaws.com/cartservice"
        YAML_FILE     = "cartservice.yaml"
    }

    stages {
        stage('Cleaning Workspace') {
            steps { cleanWs() }
        }

        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: "https://github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git"
            }
        }

stage("Docker Image Build") {
            steps {
                script {
                    // الأمر ده هيدور على الملف ويبني من مكانه فوراً
                    sh """
                        DOCKER_PATH=\$(find . -name Dockerfile | grep "src/${IMAGE_NAME}" | head -n 1)
                        if [ -z "\$DOCKER_PATH" ]; then
                            echo "Dockerfile not found for ${IMAGE_NAME}"
                            exit 1
                        fi
                        DOCKER_DIR=\$(dirname "\$DOCKER_PATH")
                        echo "Building from directory: \$DOCKER_DIR"
                        cd "\$DOCKER_DIR" && docker build -t ${IMAGE_NAME} .
                    """
                }
            }
        }
        

        stage("ECR Image Pushing") {
            steps {
                script {
                    sh """
                    aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 503459125797.dkr.ecr.us-east-1.amazonaws.com
                    docker tag ${IMAGE_NAME}:latest ${REPO_URL}:${BUILD_NUMBER}
                    docker push ${REPO_URL}:${BUILD_NUMBER}
                    """
                }
            }
        }

        stage('Update Deployment file') {
            steps {
                dir('kubernetes-files') {
                    withCredentials([usernamePassword(credentialsId: 'my-git-pattoken', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_PASS')]) {
                        sh """
                            git config user.email "${GIT_EMAIL}"
                            git config user.name "${GIT_USER_NAME}"

                            # تحديث ملف الـ YAML بالنسخة الجديدة
                            sed -i "s#image:.*#image: ${REPO_URL}:${BUILD_NUMBER}#g" ${YAML_FILE}

                            git add ${YAML_FILE}
                            git commit -m "Update ${IMAGE_NAME} Image to version ${BUILD_NUMBER}" || echo "No changes to commit"

                            # الطريقة اللي اشتغلت معاك
                            git remote set-url origin https://${GIT_USER}:${GIT_PASS}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git
                            git push origin main
                        """
                    }
                }
            }
        }
    }
}