pipeline {
    agent any 

    environment {
        // --- الأساسيات اللي هتغيرها في كل ملف جديد ---
        IMAGE_NAME    = "cartservice"
        YAML_FILE     = "cartservice.yaml"
        DOCKER_DIR    = "src/cartservice/src" // المسار اللي فيه الـ Dockerfile
        
        // --- بيانات ثابتة لكل المشروع ---
        GIT_REPO_NAME = "E-Commerce-Application-Microservice"
        GIT_USER_NAME = "Ahmedhessn"
        GIT_EMAIL     = "ahmed.hessn1212@gmail.com"
        REPO_URL      = "503459125797.dkr.ecr.us-east-1.amazonaws.com/${IMAGE_NAME}"
    }

    stages {
        stage('Cleaning Workspace') {
            steps { cleanWs() }
        }

        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: "https://github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git"
            }
        }

        stage("Docker Image Build") {
            steps {
                script {
                    dir("${DOCKER_DIR}") {
                        sh "docker build -t ${IMAGE_NAME} ."
                    }
                }
            }
        }

        stage("ECR Image Pushing") {
            steps {
                script {
                    sh """
                    aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 503459125797.dkr.ecr.us-east-1.amazonaws.com
                    docker tag ${IMAGE_NAME}:latest ${REPO_URL}:${BUILD_NUMBER}
                    docker push ${REPO_URL}:${BUILD_NUMBER}
                    """
                }
            }
        }

        stage('Update Deployment file') {
            steps {
                dir('kubernetes-files') {
                    // الطريقة اللي ريحتك (Username/Password)
                    withCredentials([usernamePassword(credentialsId: 'my-git-pattoken', 
                                                     usernameVariable: 'GIT_USER', 
                                                     passwordVariable: 'GIT_PASS')]) {
                        sh """
                            git config user.email "${GIT_EMAIL}"
                            git config user.name "${GIT_USER_NAME}"

                            # تحديث الصورة في ملف الـ yaml
                            sed -i "s#image:.*#image: ${REPO_URL}:${BUILD_NUMBER}#g" ${YAML_FILE}

                            git add ${YAML_FILE}
                            
                            # تنفيذ الـ commit والـ push
                            if git commit -m "Update ${IMAGE_NAME} Image to version ${BUILD_NUMBER}"; then
                                git remote set-url origin https://${GIT_USER}:${GIT_PASS}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git
                                git push origin main
                            else
                                echo "No changes to commit"
                            fi
                        """
                    }
                }
            }
        }
    }
}