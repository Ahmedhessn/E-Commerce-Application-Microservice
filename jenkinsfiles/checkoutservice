pipeline {
    agent any 

    stages {
        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/Ahmedhessn/E-Commerce-Application-Microservice.git'
            }
        }
        stage("Docker Image Build") {
            steps {
                script {
                    dir('src/checkoutservice') {
                        sh 'docker system prune -f'
                        sh 'docker container prune -f'
                        sh 'docker build -t checkoutservice .'
                    }
                }
            }
        }
        stage("ECR Image Pushing") {
            steps {
                script {
                    sh '''
                    #Retrieve an authentication token and authenticate your Docker client to your registry. Use the AWS CLI:
                    aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 503459125797.dkr.ecr.us-east-1.amazonaws.com

                    #After the build completes, tag your image so you can push the image to this repository:
                    docker tag checkoutservice:latest 503459125797.dkr.ecr.us-east-1.amazonaws.com/checkoutservice:${BUILD_NUMBER}

                    #Run the following command to push this image to your newly created AWS repository:
                    docker push 503459125797.dkr.ecr.us-east-1.amazonaws.com/checkoutservice:${BUILD_NUMBER}
                    '''
                }
            }
        }
stage('Update Deployment file') {
    steps {
        dir('kubernetes-files') {
            // لاحظ التغيير هنا من string لـ usernamePassword
            withCredentials([usernamePassword(credentialsId: 'my-git-pattoken', passwordVariable: 'git_token', usernameVariable: 'git_user')]) {
                sh """
                    git config user.email "${GIT_EMAIL}"
                    git config user.name "${GIT_USER_NAME}"
                    
                    sed -i "s#image:.*#image: ${REPO_URL}:${BUILD_NUMBER}#g" ${YAML_FILE}
                    
                    git add .
                    
                    if git commit -m "Update ${IMAGE_NAME} Image to version ${BUILD_NUMBER}"; then
                        # جينكنز هيستخدم الـ git_token (الباسورد) هنا أوتوماتيك
                        git push https://\${git_token}@github.com/Ahmedhessn/${GIT_REPO_NAME}.git HEAD:main
                    else
                        echo "No changes to commit"
                    fi
                    
                    }
                }
            }
        }
    }
}
