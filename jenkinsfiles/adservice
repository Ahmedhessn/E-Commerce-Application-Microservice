pipeline {
    agent any 

    environment {
        GIT_REPO_NAME = "E-Commerce-Application-Microservice"
        GIT_EMAIL = "ahmed.hessn1212@gmail.com"
        GIT_USER_NAME = "Ahmedhessn"
        IMAGE_NAME = "adservice"
        REPO_URL = "503459125797.dkr.ecr.us-east-1.amazonaws.com/adservice"
        YAML_FILE = "adservice.yaml"
    }

    stages {
        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/Ahmedhessn/E-Commerce-Application-Microservice.git'
            }
        }

        stage("Docker Image Build") {
            steps {
                script {
                    dir('src/adservice') {
                        sh 'docker system prune -f'
                        sh 'docker container prune -f'
                        sh 'docker build -t adservice .'
                    }
                }
            }
        }

        stage("ECR Image Pushing") {
            steps {
                script {
                    sh '''
                    aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 503459125797.dkr.ecr.us-east-1.amazonaws.com
                    docker tag adservice:latest 503459125797.dkr.ecr.us-east-1.amazonaws.com/adservice:${BUILD_NUMBER}
                    docker push 503459125797.dkr.ecr.us-east-1.amazonaws.com/adservice:${BUILD_NUMBER}
                    '''
                }
            }
        }

        stage('Update Deployment file') {
    steps {
        dir('kubernetes-files') {
            withCredentials([usernamePassword(credentialsId: 'my-git-pattoken', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_PASS')]) {
                sh '''
                    git config user.email "ahmed.hessn1212@gmail.com"
                    git config user.name "Ahmedhessn"

                    sed -i "s#image:.*#image: 503459125797.dkr.ecr.us-east-1.amazonaws.com/adservice:${BUILD_NUMBER}#g" adservice.yaml

                    git add adservice.yaml
                    git commit -m "Update adservice Image to version ${BUILD_NUMBER}" || echo "No changes to commit"

                    git remote set-url origin https://${GIT_USER}:${GIT_PASS}@github.com/Ahmedhessn/E-Commerce-Application-Microservice.git
                    git push origin main
                '''
            }
        }
    }
    } 
    }
}